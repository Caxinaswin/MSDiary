@model MSDiary.Models.Rendimento

@{
    ViewBag.Title = "Delete";
}

<br />
<br />
<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm())
        {
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Tem a certeza que pretende eliminar a despesa?</h4>
            </div>
            @Html.AntiForgeryToken()
            <div class="modal-body">
                <p>@Html.LabelFor(model => model.TipoRendimento) : @Html.DisplayFor(model => model.TipoRendimento)</p>
                <p>@Html.LabelFor(model => model.RendimentoDescricao) : @Html.DisplayFor(model => model.RendimentoDescricao)</p>
                <p>@Html.LabelFor(model => model.RendimentoValor) : @Html.DisplayFor(model => model.RendimentoValor)</p>
                <p>@Html.LabelFor(model => model.Data) : @Html.DisplayFor(model => model.Data)</p>
                @if (Model.Comentario != null)
                {
                    <p>@Html.LabelFor(model => model.Comentario) : @Html.DisplayFor(model => model.Comentario)</p>
                }
            </div>
            <div class="modal-footer">
                <input type="submit" value="Eliminar" class="btn btn-primary" />
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
            </div>
        }
    </div>
</div>
