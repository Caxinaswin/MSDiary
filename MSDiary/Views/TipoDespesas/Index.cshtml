@model IEnumerable<MSDiary.Models.TipoDespesa>

@{
    ViewBag.Title = "Tipos de despesa";
}

<h2>Tipos de Despesa</h2>

<p>
    @Html.ActionLink("Criar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TipoDespesaNome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.subTipo.TipoDespesaNome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TipoDespesaNome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.subTipo.TipoDespesaNome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.TipoDespesaId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.TipoDespesaId }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.TipoDespesaId })
        </td>
    </tr>
}

</table>
