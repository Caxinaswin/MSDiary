@model IEnumerable<MSDiary.Models.TipoPagamento>

@{
    ViewBag.Title = "Tipo de pagamento";
}

<h2>Tipos de pagamentos</h2>

<p>
    @Html.ActionLink("Create", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TipoPagamentoNome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TipoPagamentoNome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.TipoPagamentoId }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.TipoPagamentoId })|
            @Html.ActionLink("Detalhes", "Details", new { id = item.TipoPagamentoId })
        </td>
    </tr>
}

</table>
